# Required: 32+ character hex string for AES-256 encryption of stored credentials
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_MASTER_KEY=

# PostgreSQL connection
# Local: postgresql://studio:studio@localhost:5432/studio_analytics
# Railway: provided automatically via DATABASE_URL env var
DATABASE_URL=postgresql://studio:studio@localhost:5432/studio_analytics

# Redis connection (default: redis://localhost:6379)
REDIS_URL=redis://localhost:6379

# Google Service Account (for Sheets API)
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=

# Google Spreadsheet IDs (the long string between /d/ and /edit in the Sheet URL)
# Can also be configured in the Settings UI
ANALYTICS_SPREADSHEET_ID=
RAW_DATA_SPREADSHEET_ID=
